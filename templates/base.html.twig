<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}" color="#0079d9">
    <meta name="msapplication-TileColor" content="#2b5797">
    <meta name="theme-color" content="#0079D9">
    <title>{% block title %}File converter{% endblock %}</title>
    {% block stylesheets %}
        <link rel="preconnect" href="https://fonts.googleapis.com/" crossorigin>
        <link rel="preload" href="https://fonts.googleapis.com/css?family=Montserrat:500,600" as="style"
              onload="this.rel = 'stylesheet'" crossorigin>
        <noscript>
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:500,600">
        </noscript>
        {% for js in encore_entry_js_files('js/preload') %}
        <script src="{{ asset(js) }}" async defer></script>
        {% endfor %}
        {{ encore_entry_link_tags('css/main') }}
    {% endblock %}

    {% block javascript %}
    {% for js in encore_entry_js_files('js/preload') %}
           <script src="{{ asset(js) }}" async></script>
       {% endfor %}
   {% for upload_validation in encore_entry_js_files('js/upload-validation') %}
       <script src="{{ asset(upload_validation) }}" async></script>
   {% endfor %}
{% endblock %}
</head>
<body>
<header></header>
<main class="content">
    <div class="container">
        <h1 class="title-1">File Converter</h1>
        <p>Convert your xlsx and csv files in one click! </p>
        <div class="box">
            {{ form_start(convertForm, {attr: {class: 'form'}}) }}
            <div class="button">
                {{ form_row(convertForm.csv) }}
            </div>
            <div class="button">
                {{ form_row(convertForm.xlsx) }}
            </div>
            {{ form_end(convertForm) }}
        </div>
    </div>
</main>
<footer class="container">
    <small>{{ 'now' | date('Y') }} &copy; copyright</small>
</footer>
</body>
</html>
